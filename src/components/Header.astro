---
import Badge from './Badge.astro';
---

<header class="py-6 lg:py-14 xl:py-16">
    <div class="container px-4 flex flex-col items-center gap-2 text-center md:gap-4 md:text-left md:flex-row lg:gap-6">
      <div class="space-y-2">
        <h1 class="text-4xl font-bold tracking-tighter sm:text-5xl md:text-6xl lg:text-7xl/none">
            Agustin Calderon 
        </h1>
        <p class="max-w-[600px] text-gray-500 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed dark:text-gray-400">
            <div class="flex ">
                <Badge> Developer </Badge>
            </div>
        </p>
      </div>

      <div class="mx-auto order-first space-y-2 md:order-none md:ml-auto lg:space-y-4 relative">
        <img
          alt="Avatar"
          class="rounded-full border border-gray-200 aspect-square object-cover object-center dark:border-gray-800"
          height="150"
          src="AgustinCalderon.jpg"
          width="150"
        />
        <span class="top-0 left-2 absolute  w-5 h-5 bg-green-400 border-2 border-white dark:border-gray-800 rounded-full"></span>
      </div>
    </div>
  </header>	

